
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" >
    <h1 id="textoHome" class="display-4">Bem vindo ao Monitorar Tarefas</h1>
    <p>Acomanhe de forma eficaz o fluxo de tarefas da sua equipe</p>
</div>
<br />

@if (SignInManager.IsSignedIn(User))
{
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a class="btn btn-light" asp-area="" asp-controller="Projetos" asp-action="Index">Acessar Projetos</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a class="btn btn-light" asp-area="" asp-controller="Tarefas" asp-action="Index">Acessar Tarefas</a>
                </div>
            </div>
        </div>
    </div>
}

else
{
    <p class="text-center"><a class="btn btn-light" asp-area="Identity" asp-page="/Account/Login">Iniciar agora</a></p>
}

