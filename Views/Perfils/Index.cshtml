@model IEnumerable<Monitorar_Tarefas.Models.Entidades.Perfil>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

<!-- MAIN CONTENT-->
<div class="main-content">
    <partial name="~/Views/Shared/_AlertasPartial.cshtml" />
    <div class="section__content section__content--p30">
        <div class="container-fluid card card-body shadow p-3 mb-5">
            <h2><i class="zmdi zmdi-account"> </i> Página de Perfil</h2>
            <hr />
            <br />
            <div class="row">
                <div class="col-md-6 col-lg-3">
                    <div class="statistic__item shadow p-3 mb-5">
                        <h2 class="number">0</h2>
                        <span class="desc">Pessoas online</span>
                        <div class="icon">
                            <i class="zmdi zmdi-account-o"></i>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="statistic__item shadow p-3 mb-5">
                        <h2 class="number">0</h2>
                        <span class="desc">Perfis registrados</span>
                        <div class="icon">
                            <i class="zmdi zmdi-calendar-note"></i>
                        </div>
                    </div>
                </div>
            </div>
            <p>
                <a class="btn btn-primary" asp-action="Create">Adicionar Perfil</a>
            </p>

            <hr />

            <br />
            <h5>Informações de Perfis</h5>
            <br />

            <!-- DATA TABLE-->
            <div class="table-responsive m-b-40">
                <div class="table-responsive table-responsive-data2">
                    <table class="table table-borderless table-striped table-earning shadow p-3 mb-5">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PerfilUsuario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CodigoPerfil)
                                </th>
                                <th>
                                    <span class="fa  fa-ellipsis-v"></span>
                                    Ações
                                </th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PerfilUsuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodigoPerfil)
                                </td>
                                <td>
                                    <span class="fa  fa-edit"></span>
                                    <a class="btn btn-light btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                    <span class="fa   fa-tasks"></span>
                                    <a class="btn btn-light btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                                    <span class="fa fa-trash"></span>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <div class="col-md-12">
                <div class="copyright">
                    <p>Copyright © 2020 - Monitorar Tarefas - todos os direitos reservados.</p>
                </div>
            </div>
        </div>
    </div>
</div>